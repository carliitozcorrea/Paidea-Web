{% set body_class="login-bg"%}
{% extends "FOSUserBundle::layout.html.twig" %}
{% block fos_user_content %}
    <div class="col-md-4 col-md-offset-4">
        <div class="login-wrapper">
            <div class="box">
                <div class="content-wrap">
                    <h6>T Iniciar Sesión</h6>
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"  placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" />
                        <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" />
                        <div class="action">
                            <button type="submit" id="_submit" name="_submit" class="btn btn-primary signup" >Entrar</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="already">
                <a href="{{ path('fos_user_resetting_request') }}">T ¿Olvidaste tu Contraseña?</a>
            </div>
            {% if error %}
                <div class="alert alert-danger" style="margin-top: 10px;">
                    {{ error|trans({}, 'FOSUserBundle') }}
                    <br>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock fos_user_content %}