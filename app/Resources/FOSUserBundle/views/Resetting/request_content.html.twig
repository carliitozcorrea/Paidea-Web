<div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3" style="margin-top: 30px;">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3>{{ 'login.request.password'|trans }}</h3>
        </div>
        <div class="panel-body">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                <div class="form-group">
                    <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input class="form-control" type="text" id="username" name="username" required="required" />
                </div>
                {% if invalid_username is defined %}
                    <div class="alert alert-danger" style="margin-top: 10px;">
                        <strong>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</strong>
                    </div>     
                {% endif %}
                <button class="btn btn-primary" type="submit">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
            </form>
        </div>
    </div>
</div>



