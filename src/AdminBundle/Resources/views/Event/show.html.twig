{% extends 'AdminBundle:model:show.html.twig' %}
{% block title %}
    {{'event.show'|trans}} -
    {{ parent() }}
{% endblock %}
{% block paneltitle %}
    {{'event.show'|trans}}
{% endblock %}
{% block content %}
    <div class="page-header">
        <h3>{{entity.name}} <small>{{entity.type}}</small></h3>
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">    
            <a class="thumbnail">
                <img class="img-responsive" src="{{ asset(vich_uploader_asset(entity, 'file')) }}" alt="{{ entity.name }}" >
            </a>
        </div>
    </div>

    <div class="panel panel-info">
        <div class="panel-heading">
            <h4 class="panel-title">{{'event.dates'|trans}}</h4>
        </div>
        <div class="panel-body">
            <div class="row text-center">
                <div class="col-sm-6">
                    <h4>{{'event.start'|trans}}</br></br>
                        <span class="label label-primary">{{entity.startdate |date("d/m/Y H:i:s")}}</span></h4>
                </div>
                <div class="col-sm-6">
                    <h4>{{'event.finish'|trans}}</br></br>
                        <span class="label label-primary">{{entity.enddate |date("d/m/Y H:i:s")}}</span></h4>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">
            <h4 class="panel-title">{{'event.place'|trans}}</h4>
        </div>
        <div class="panel-body">
            <p>{{entity.place}}</p>
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">
            <h4 class="panel-title">{{'event.description'|trans}}</h4>
        </div>
        <div class="panel-body">
            <p class="text-justify">{{entity.description}}</p>
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">
            <h4 class="panel-title">{{'event.responsible'|trans}}</h4>
        </div>
        <div class="panel-body">
            <p>{{entity.responsible}}</p>
            <p><label>{{'event.responsible.eco' | trans}}:</label> {{entity.responsibleeco}}</p>
        </div>
    </div>
{% endblock %}