<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th># ID</th>
                <th>{{'category.name'|trans}}</th>
                <th>{{'category.image'|trans}}</th>
                <th>{{'created'|trans}}</th>
                <th>{{'updated'|trans}}</th> 
                <th>{{'options'|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for category in entities %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <img class="img-responsive thumb" src="{{ asset(vich_uploader_asset(category, 'file')) }}" alt="{{ category.name }}" >
                    </td>
                    <td>{{ category.created|date("m/d/Y") }}</td>
                    <td>{{ category.updated|date("m/d/Y") }}</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                {{'options'|trans}}
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('admin_'~model.name~'_edit',{id: category.id}) }}">{{'action.edit'|trans}}</a></li>
                                <li class="divider"></li>
                                <li>
                                    {{ ge.btnStatus(category.isActive, path('admin_'~model.name~'_toggle', {id: category.id})) }}
                                </li>
                                <li>
                                    <a href="" data-ajax-remove="{{ path('admin_'~model.name~'_delete',{id: category.id}) }}" class="delete">{{'action.delete'|trans}}</a>
                                <li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>