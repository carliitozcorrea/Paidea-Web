{% extends 'AdminBundle::base.html.twig' %}
{% block title %}
    {%if route == 'admin_user_listactive' %}
        {{'user.active'|trans}}
    {% else %}
        {{'user.inactive'|trans}}
    {%endif%}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3>
                        {% if route == 'admin_user_listactive'%}
                            {{'user.active'|trans}}
                        {% else %}
                            {{'user.inactive'|trans}}
                        {% endif %}
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>{{'user.name'|trans}}</th>
                                    <th>{{'user.complete.name'|trans}}</th>
                                    <th>{{'user.email'|trans}}</th>
                                    <th>{{'options'|trans}}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.username }}</td>
                                        <td>{{ user.name }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                                    {{'options'|trans}}
                                                    <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li><a href="{{ path('admin_user_edit',{id: user.id}) }}">{{'action.edit'|trans}}</a></li>
                                                    <li><a href="{{ path('admin_user_changepassword',{id: user.id}) }}">{{'profile.change.password'|trans}}</a></li>
                                                    <li class="divider"></li>
                                                    <li>
                                                        {% if route == 'admin_user_listactive'%}
                                                            <a href="{{ path('admin_user_toogle',{id: user.id}) }}">{{'action.inactive'|trans}}</a>
                                                        {% else %}
                                                            <a href="{{ path('admin_user_toogle',{id: user.id}) }}">{{'action.active'|trans}}</a>
                                                        {% endif %}
                                                    </li>

                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="panel-footer text-right">
                    <div class="navigation">
                        {{ knp_pagination_render(users) }}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}


